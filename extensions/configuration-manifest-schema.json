{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConfigurationManifest",
  "type": "object",
  "required": [
    "authenticationTypes",
    "packages",
    "supportedAPIs"
  ],
  "properties": {
    "authenticationTypes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/AuthenticationType"
      }
    },
    "packages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NuGetPackage"
      }
    },
    "help": {
      "$ref": "#/definitions/HelpInfo"
    },
    "supportedAPIs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SupportedApi"
      }
    },
    "additionalProperties": false
  },
  "definitions": {
    "SourceFile": {
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string"
        },
        "folder": {
          "type": "string"
        }
      }
    },
    "AuthenticationParameter": {
      "additionalProperties": false,
      "properties": {
        "contentType": {
          "enum": ["PlainText", "URI", "PEM", "GUID"],
          "type": "string",
          "default": "PlainText"
        },
        "displayName": {
          "type": "string"
        },
        "inputType": {
          "enum": ["PlainText", "SecurityText", "MultiLineText"],
          "type": "string",
          "default": "PlainText"
        },
        "key": {
          "type": "string"
        },
        "mandatory": {
          "type": "boolean"
        },
        "placeHolder": {
          "type": "string"
        },
        "validationRegEx": {
          "type": "string"
        },
        "validationMessage": {
          "type": "string"
        },
        "displayInWizard": {
          "type": "boolean",
          "default": "true"
        },
        "help": {
          "$ref": "#/definitions/HelpInfo"
        },
        "defaultValue": {
          "type": "string"
        }
      },
      "required": ["key"],
      "type": "object"
    },
    "AuthenticationType": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "parameters": {
          "items": {
            "$ref": "#/definitions/AuthenticationParameter"
          },
          "type": "array"
        },
        "source": {
          "type": "string"
        },
        "sources": {
          "items": {
            "$ref": "#/definitions/SourceFile"
          },
          "type": "array"
        },
        "folder": {
          "type": "string"
        },
        "help": {
          "$ref": "#/definitions/HelpInfo"
        },
        "postConfigOpenURI": {
          "type": "string"
        },
        "applicableProjectType": {
          "enum": ["All", "Web"],
          "type": "string",
          "default": "All"
        },
        "preferredConfigFile": {
          "enum": ["Auto", "AppConfig"],
          "type": "string",
          "default": "Auto"
        }
      },
      "required": [
        "name",
        "displayName",
        "description",
        "parameters"
      ],
      "type": "object"
    },
    "NuGetPackage": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": ["name", "version"],
      "type": "object"
    },
    "HelpInfo": {
      "additionalProperties": false,
      "properties": {
        "hint": {
          "type": "string"
        },
        "displayText": {
          "type": "string"
        },
        "URI": {
          "type": "string"
        }
      },
      "required": ["hint", "URI"],
      "type": "object"
    },
    "SupportedApi": {
      "additionalProperties": false,
      "properties": {
        "apiType": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "packages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NuGetPackage"
          }
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
